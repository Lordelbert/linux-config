!! ROFI Color theme
!! ------------------------------------------------------------------------------
rofi.opacity: 35
! Use extended color scheme
rofi.color-normal:                   argb:00000000,  #D8DEE9 , argb:00000000,  #1793e0 ,  #1B2B34
rofi.color-urgent:                   argb:00000000,  #F99157 , argb:00000000,  #F99157 ,  #1B2B34
rofi.color-active:                   argb:00000000,  #6699CC , argb:00000000,  #6699CC ,  #1B2B34
rofi.color-window:                   argb:ee000000,  #000000 ,  #1793e0
! Separator style (none, dash, solid)
rofi.separator-style:   dash
rofi.show-icons:        true
rofi.color-enabled:     true
rofi.combi-modi:		window,run,ssh,drun
rofi.modi:combi
!rofi.font:              'Noto Sans 11'
rofi.hide-scrollbar:    true
URxvt.keysym.M-C-v:              perl:clipboard:paste_escaped
